<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Estatia</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100 bg-light">

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold fs-4 text-primary" asp-controller="Property" asp-action="Index">
                    <i class="bi bi-house-heart-fill"></i> Estatia
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" asp-controller="Property" asp-action="Index">Buy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" href="#">Rent</a> 
                        </li>
                        
                        @if (User.IsInRole("Agent"))
                        {
                            <li class="nav-item ms-3">
                                <a class="btn btn-primary btn-sm rounded-pill px-3 fw-bold" 
                                   asp-controller="Property" asp-action="Create">
                                   + Post Property
                                </a>
                            </li>
                        }
                    </ul>
                    
                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-3">
                                <span class="text-muted small">Hello,</span> 
                                <span class="fw-bold text-dark">@User.Identity.Name</span>
                            </li>

                            <li class="nav-item me-2">
                                @if (User.IsInRole("Agent"))
                                {
                                    <a class="btn btn-sm btn-outline-primary fw-bold" asp-controller="Agent" asp-action="Index">
                                        <i class="bi bi-speedometer2"></i> Dashboard
                                    </a>
                                }
                                else if (User.IsInRole("Admin"))
                                {
                                    <a class="btn btn-sm btn-outline-dark fw-bold" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="bi bi-shield-lock"></i> Admin Panel
                                    </a>
                                }
                                else
                                {
                                    <a class="btn btn-sm btn-outline-secondary fw-bold" asp-controller="Account" asp-action="User">
                                        <i class="bi bi-person-circle"></i> My Profile
                                    </a>
                                }
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm fw-bold">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold" asp-controller="Account" asp-action="Login">Log In</a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-dark btn-sm fw-bold px-3" asp-controller="Account" asp-action="RegisterAgent">
                                    Become an Agent
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white mt-auto py-4">
        <div class="container text-center">
            <p class="mb-1 fw-bold text-dark">Estatia</p>
            <small>Real Estate, Real Easy </small>
            <div class="mt-2">
                &copy; 2026 - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy Policy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>