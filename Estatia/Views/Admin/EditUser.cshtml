@model Estatia.Models.User
@{ ViewData["Title"] = "Edit User"; }

<div class="container py-5" style="max-width: 600px;">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary text-white">
            <h4 class="mb-0 fw-bold"><i class="bi bi-person me-2"></i>Edit User Profile</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="EditUser" method="post">
                <input type="hidden" asp-for="Id" />
                
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="PhoneNumber" class="form-label fw-bold">Contact Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Dashboard" class="btn btn-light">Cancel</a>
                    <button type="submit" class="btn btn-secondary px-4 fw-bold">Update User</button>
                </div>
            </form>
        </div>
    </div>
</div>