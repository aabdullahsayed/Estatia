@model Estatia.Models.Agent
@{ ViewData["Title"] = "Edit Agent"; }

<div class="container py-5" style="max-width: 600px;">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0 fw-bold"><i class="bi bi-person-badge me-2"></i>Edit Agent Profile</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="EditAgent" method="post">
                <input type="hidden" asp-for="Id" />
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Agent / Agency Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                

                <div class="d-flex justify-content-between">
                    <a asp-action="Dashboard" class="btn btn-light">Cancel</a>
                    <button type="submit" class="btn btn-primary px-4 fw-bold">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>