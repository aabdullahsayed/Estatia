@model Estatia.Models.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-primary">System Overview</h2>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button class="btn btn-outline-danger fw-bold">Logout</button>
                </form>
            </div>

            <div class="row g-3 mb-5">
                <div class="col-md-4">
                    <div class="card bg-primary text-white border-0 shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title"><i class="bi bi-people-fill me-2"></i>Total Agents</h5>
                            <p class="display-5 fw-bold mb-0">@Model.TotalAgents</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-info text-white border-0 shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title"><i class="bi bi-person-badge me-2"></i>Total Users</h5>
                            <p class="display-5 fw-bold mb-0">@Model.TotalUsers</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-success text-white border-0 shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title"><i class="bi bi-houses-fill me-2"></i>Total Properties</h5>
                            <p class="display-5 fw-bold mb-0">@Model.TotalProperties</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-5">
                
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-dark">Manage Agents</h5>
                    
                    <a asp-controller="Agent" asp-action="Create" class="btn btn-sm btn-success fw-bold">
                        <i class="bi bi-plus-lg"></i> Add New Agent
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Name</th>
                                <th>Email</th>
                                <th class="text-center">Active Listings</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var agent in Model.Agents)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">@agent.Name</td>
                                    <td>@agent.Email</td>
                                    <td class="text-center">
                                        <span class="badge bg-primary rounded-pill px-3">
                                            @(agent.Properties?.Count ?? 0)
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-action="EditAgent" asp-route-id="@agent.Id" class="btn btn-sm btn-outline-secondary me-1">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@agent.Id" method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this agent?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 fw-bold text-secondary">Registered Users</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td class="ps-4">@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td class="text-end pe-4">
                                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary me-1">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline"
                                              onsubmit="return confirm('Remove this user?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-x-lg"></i> Remove
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>