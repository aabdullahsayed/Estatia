@model Estatia.Models.ViewModels.PredictionViewModel

@{ ViewData["Title"] = "ML Price Estimator"; }

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-robot"></i> ML Price Estimator</h4>
                </div>
                <div class="card-body p-4">
                    
                    <form asp-action="Index" method="post">
                        <div class="mb-3">
                            <label asp-for="SizeSqFt" class="form-label fw-bold"></label>
                            <input asp-for="SizeSqFt" class="form-control" placeholder="e.g. 1200" />
                            <span asp-validation-for="SizeSqFt" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">City</label>
                            <select asp-for="CityCode" class="form-select">
                                <option value="0">Dhaka</option>
                                <option value="1">Chittagong</option>
                                <option value="2">Other</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Type</label>
                            <select asp-for="TypeCode" class="form-select">
                                <option value="0">For Sale</option>
                                <option value="1">For Rent</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 fw-bold">Estimate Price</button>
                    </form>

                    @if (Model.PredictedPrice.HasValue)
                    {
                        <div class="alert alert-success mt-4 text-center">
                            <h5 class="mb-0">Estimated Price:</h5>
                            <h2 class="fw-bold">৳@Model.PredictedPrice.Value.ToString("N0")</h2>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>