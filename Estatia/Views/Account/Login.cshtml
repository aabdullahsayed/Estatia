@{ ViewData["Title"] = "Login"; }

<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <h3 class="text-center fw-bold mb-4">Sign In</h3>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Error</div>
                    }

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" name="email" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" required />
                        </div>

                        <button type="submit" class="btn btn-primary w-100 fw-bold">Login</button>
                    </form>

                    <div class="mt-4 text-center">
                        <p class="text-muted small mb-2">Don't have an account?</p>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-dark w-100">
                            Create New Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>