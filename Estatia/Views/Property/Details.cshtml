@model Estatia.Models.Property

@{ ViewData["Title"] = Model.Title; }

<div class="container py-5">
    <div class="row">
        
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4 overflow-hidden rounded-3">
                <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/800x500" : Model.ImageUrl)" 
                     class="img-fluid w-100" style="object-fit: cover; max-height: 500px;" alt="@Model.Title">
            </div>

            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <span class="badge bg-primary mb-2">@Model.Type</span>
                    <h1 class="fw-bold mb-0">@Model.Title</h1>
                    <p class="text-muted"><i class="bi bi-geo-alt-fill"></i> @Model.Area, @Model.City, @Model.Division</p>
                </div>
                <h2 class="text-primary fw-bold">৳@Model.Price.ToString("N0")</h2>
            </div>
            
            <hr />

            <h4 class="fw-bold mt-4">Description</h4>
            <p class="text-secondary" style="line-height: 1.8;">
                This is a beautiful property located in the heart of @Model.Area. 
                Perfect for families or investment. (Description placeholder text).
            </p>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 sticky-top" style="top: 20px;">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">Contact Agent</h5>
                </div>
                
                <div class="card-body p-4 text-center">
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        // === CASE 1: USER IS LOGGED IN (SHOW DETAILS) ===
                        
                        <div class="mb-4">
                            <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                                 style="width: 80px; height: 80px; font-size: 30px;">
                                <i class="bi bi-person-fill text-secondary"></i>
                            </div>
                            <h4 class="fw-bold">@Model.Agent?.Name</h4>
                            <p class="text-muted small">Verified Agent</p>
                        </div>

                        <div class="d-grid gap-2">
                           

                            <a href="mailto:@Model.Agent?.Email?subject=Inquiry about @Model.Title" class="btn btn-primary fw-bold">
                                <i class="bi bi-envelope-fill me-2"></i> Message Agent
                            </a>
                        </div>
                        
                        <div class="mt-3 text-muted small">
                            <i class="bi bi-shield-check text-success"></i> You are logged in.
                        </div>
                    }
                    else
                    {
                        // === CASE 2: USER IS LOGGED OUT (HIDE DETAILS) ===

                        <div class="py-4">
                            <i class="bi bi-lock-fill text-muted" style="font-size: 3rem;"></i>
                            <h5 class="mt-3 fw-bold text-secondary">Contact Info Locked</h5>
                            <p class="text-muted small mb-4">
                                Log in to view the agent's name, phone number, and send messages.
                            </p>
                            
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary w-100 fw-bold">
                                Log In to View Agent
                            </a>
                            <div class="mt-2">
                                <small class="text-muted">Don't have an account? <a asp-controller="Account" asp-action="Register">Register</a></small>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
        
    </div>
</div>